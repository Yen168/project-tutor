<div class="col-md-12"> 
  <div class="branch">
    <%= link_to("New Branch", new_branch_path , class: "btn btn-primary pull-right" ) %>
  </div>

  <table class="table table-hover">
    <thead> 
      <tr>
        <td> # </td>
        <td> Title </td>
        <td> Description </td>
      </tr>
    </thead>

    <tbody>
            <% @branches.each do |branch| %> 
    <tr>
      <td> # </td>
      <td>  <%= link_to(branch.title, branch_path(branch)) %> </td>
      <td>  <%= branch.description %> </td>
      <td>  <%= link_to("Edit", 
                        edit_branch_path(branch), 
                        class: "btn btn-sm btn-default")%>

            <%= link_to("Delete", 
                        branch_path(branch), 
                        class: "btn btn-sm btn-default", 
                        method: :delete,
                        data: { confirm: "Are you sure?" } )%></td> 
    </tr>
            <% end %> 
    </tbody>
  </table>
</div>
